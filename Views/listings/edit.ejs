<%layout('/layouts/boilerplate')-%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
            <h3>Edit <%=listing.title%></h3><br>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="Listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Title should be Valid!</div>
                    <div class="valid-feedback">Title looks Good!</div>

                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="Listing[description]" rows="5" cols="40" class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                    <div class="valid-feedback">Wow! description looks good</div>

                </div>
                Original Image
                <div class="mb-3">
                    <img src="<%=newImageUrl%>" style="border-radius:10px;"/>
                 </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="Listing[image]" type="file" class="form-control">
                </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="Listing[price]" type="number" class="form-control" value="<%=listing.price%>" required>
                    <div class="invalid-feedback">Price should be Valid!</div>
                    <div class="valid-feedback">Affordable Price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="Listing[location]" type="text" class="form-control" value="<%=listing.location%>" required>
                    <div class="invalid-feedback">Country should be Valid!</div>

                </div>
            </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="Listing[country]" type="text" class="form-control" value="<%=listing.country%>" required>
                    <div class="invalid-feedback">Location should be Valid!</div>
                </div>
                
                <button class="btn btn-dark mt-3 edit-btn">Edit</button><br><br>
            </form>
        </div>
    </div>
</body>



