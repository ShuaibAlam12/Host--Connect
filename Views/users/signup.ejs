<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br>
        <h3>
            SignUp on HostConnect
        </h3>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" id="username" required class="form-control">
                <div class="invalid-feedback">Username should be Valid!</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email" id="email" required class="form-control">
                <div class="invalid-feedback">Email should be Valid!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" id="password" required class="form-control">
                <div class="invalid-feedback">Password should be Valid!</div>
            </div>
            <button class="btn btn-success mb-3">SignUp</button>
        </form>
    </div>
</div>